@{
    ViewData["Title"] = "Login Page";
}
@model Antique_Shop.ViewModels.LoginUser;
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="jumbotron shadow-lg p-3 mb-5 bg-white rounded">
            <h1 style="text-align: center;">Log in</h1><br />
                <form asp-controller="Account" asp-action="Login" method="post">

                    <div>
                        <div class="form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span><input asp-for="Login" class="form-control" placeholder="Login" />
                            </div>
                            
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group" >
                            <label asp-for="RememberMe"></label>
                            <input asp-for="RememberMe" class=custom-checkbox />
                        </div>
                        <div style="width:100%;display:flex;justify-content:center;align-content:center">
                            <button id="Button" type="submit" name="submit" formmethod="post" class="btn btn-outline-success btn-sm">Zaloguj</button>
                        </div>
                    </div>
                </form>
        </div>
    </div>

</div>


