@{
    ViewData["Title"] = "Create Auction";
}
@model Antique_Shop.ViewModels.AuctionViewModel;

<form enctype="multipart/form-data" asp-controller="Auction" asp-action="Create" method="post">

    <div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" />
        </div>
        <div>
            <select asp-for="Category"
                    asp-items="Html.GetEnumSelectList<Category>()">
                <option value="">Choose Category</option>
            </select>
        </div>
        <div>
            <label asp-for="Price"></label>
            <input asp-for="Price" />
        </div>
        <div>
            <label asp-for="Description"></label>
            <input asp-for="Description" />
        </div>
        <div>
            <label asp-for="Image"></label>
            <input asp-for="Image" />
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button id="Button" type="submit" name="submit" formmethod="post" class="btn btn-secondary btn-sm">Create</button>
            </div>
        </div>
    </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
</form>
