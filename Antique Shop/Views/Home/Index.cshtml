@{
    ViewData["Title"] = "Home";
}
@model IEnumerable<Antique_Shop.Models.Auction>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>AuctionList</title>
</head>
<body>
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- List group-->
                <ul class="list-group shadow">
                    <!-- list group item -->
                    @foreach (var auction in Model)
                    {
                        var imagePath = "~/images/" + (auction.ImagePath ?? "noimage.jpg");
                        <li class="list-group-item">
                            <!-- Custom content-->
                            <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                                <div class="media-body order-2 order-lg-1">
                                    <h5 class="mt-0 font-weight-bold mb-2">@auction.Name</h5>
                                    <p class="font-italic text-muted mb-0 small">Author: Author</p>
                                    <p class="font-italic text-muted mb-0 small">Category: @auction.Category</p>
                                    <p class="font-italic text-muted mb-0 small"> Release Date: @auction.ReleaseDate</p>
                                    <div class="d-flex align-items-center justify-content-between mt-1">
                                        <h6 class="font-weight-bold my-2">PLN @auction.Price</h6>
                                        <ul class="list-inline small">
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                        </ul>
                                    </div>
                                </div><img src="@imagePath" asp-append-version="true" width="150" class="ml-lg-5 order-1 order-lg-2">
                            </div> <!-- End -->
                        </li>
                    }
                    <!-- End -->
                </ul> <!-- End -->
            </div>
        </div>
    </div>
</body>
</html>
